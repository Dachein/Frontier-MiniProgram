.pc {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 20rpx 0; /* 绝对锁定最紧凑间距 */
  background: transparent;
}

.pc-active {
  opacity: 0.6;
}

.pc-left {
  width: 52rpx; /* 强制锁定 52rpx 原始尺寸 */
  padding-top: 8rpx;
  margin-right: 20rpx;
}

.pc-avatar {
  width: 52rpx;  
  height: 52rpx;
  border-radius: 12rpx; /* 强制锁定 12rpx 原始圆角 */
  background: transparent;
  border: 2rpx solid var(--ui-border);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.pc-avatar-text {
  font-size: 18rpx;
  font-weight: 700;
}

/* 恢复最初的硬核颜色编码 */
.pc-avatar-PDF { border-color: #ef4444; }
.pc-avatar-PDF .pc-avatar-text { color: #ef4444; }
.pc-avatar-YTB { border-color: #f87171; }
.pc-avatar-YTB .pc-avatar-text { color: #f87171; }
.pc-avatar-WX { border-color: #10b981; }
.pc-avatar-WX .pc-avatar-text { color: #10b981; }
.pc-avatar-DEFAULT { border-color: #3b82f6; }
.pc-avatar-DEFAULT .pc-avatar-text { color: #3b82f6; }

.pc-mid {
  flex: 1;
  min-width: 0;
}

.pc-title {
  font-size: 28rpx; /* 严格对齐图 2 字体 */
  font-weight: 600; /* Semi-Bold */
  color: var(--ui-primary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 4rpx;
}

.pc-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 20rpx;
  color: var(--ui-secondary);
  opacity: 0.6;
}

.pc-meta-source {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pc-meta-divider {
  margin: 0 8rpx;
}

.pc-right {
  padding-top: 4rpx;
  padding-left: 12rpx;
  flex-shrink: 0;
}

.pc-chip {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 4rpx;
}

.pc-chip-icon {
  font-size: 20rpx;
  color: #ffb84d;
}

.pc-chip-count {
  font-size: 20rpx;
  font-weight: 700;
  color: #ffb84d;
}
