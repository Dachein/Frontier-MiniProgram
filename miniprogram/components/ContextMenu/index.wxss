.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.menu-overlay.show {
  opacity: 1;
  visibility: visible;
}

@supports (backdrop-filter: blur(20px)) {
  .menu-overlay.show {
    backdrop-filter: blur(10px);
  }
}

.menu-container {
  background: var(--ui-bg-subtle, #ffffff);
  border-radius: 48rpx 48rpx 0 0;
  padding: 40rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.35s cubic-bezier(0.23, 1, 0.32, 1);
}

.menu-container.animate-in {
  transform: translateY(0);
}

.menu-header {
  margin-bottom: 32rpx;
  padding: 0 10rpx;
}

.menu-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--ui-secondary, #888888);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.menu-list {
  background: rgba(0, 0, 0, 0.03);
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

@media (prefers-color-scheme: dark) {
  .menu-list {
    background: rgba(255, 255, 255, 0.05);
  }
}

.menu-item {
  position: relative;
  background: transparent;
  transition: background 0.2s;
}

.menu-item-hover {
  background: rgba(0, 0, 0, 0.05) !important;
}

@media (prefers-color-scheme: dark) {
  .menu-item-hover {
    background: rgba(255, 255, 255, 0.1) !important;
  }
}

.menu-item-inner {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child .menu-item-inner {
  border-bottom: none;
}

@media (prefers-color-scheme: dark) {
  .menu-item-inner {
    border-bottom-color: rgba(255, 255, 255, 0.05);
  }
}

.menu-item-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--ui-primary, #111111);
}

.menu-item.danger .menu-item-text {
  color: #ff4d4f;
}

.menu-item-icon {
  font-size: 36rpx;
}

.menu-cancel {
  background: rgba(0, 0, 0, 0.03);
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--ui-primary, #111111);
}

@media (prefers-color-scheme: dark) {
  .menu-cancel {
    background: rgba(255, 255, 255, 0.05);
  }
}


