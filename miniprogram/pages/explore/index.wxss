page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* Prevent body scroll */
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

.home-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 0 12rpx 0;
  flex-shrink: 0;
}

.segmented {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx;
  border: 2rpx solid #e5e7eb; /* UI.border */
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  margin: 8rpx 0 18rpx 0;
  flex-shrink: 0;
}

.segmented-item {
  flex: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #4b5563; /* UI.secondary */
  transition: all 0.2s ease;
}

.segmented-item-active {
  color: #111111; /* UI.primary */
  background: #ffffff;
  border: 2rpx solid #e5e7eb;
}

/* Swiper height */
.home-swiper {
  flex: 1;
  width: 100%;
}

.tab-scroll {
  height: 100%;
}

.list-row:last-child .divider {
  display: none;
}

.loading-box,
.empty-box,
.login-prompt {
  padding: 24rpx 0;
}

.fab {
  position: fixed;
  right: 28rpx;
  bottom: calc(36rpx + env(safe-area-inset-bottom));
  width: 112rpx;
  height: 112rpx;
  z-index: 999;
}

.fab-inner {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: #ea580c; /* UI.action */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 36rpx rgba(234, 88, 12, 0.35);
}

.fab-plus {
  font-size: 56rpx;
  font-weight: 800;
  color: #000000;
  line-height: 56rpx;
  margin-top: -6rpx;
}

@media (prefers-color-scheme: dark) {
  .segmented {
    border-color: #1f2937;
    background: rgba(0, 0, 0, 0.35);
  }

  .segmented-item {
    color: #9ca3af;
  }

  .segmented-item-active {
    color: #ffffff;
    background: #111111;
    border-color: #1f2937;
  }

  .fab-inner {
    background: #ff9f1c;
    box-shadow: 0 16rpx 36rpx rgba(255, 159, 28, 0.28);
  }
}

/* ========================================================================
   Add New Piece Drawer
   ======================================================================== */

.add-drawer {
  background: var(--ui-bg-subtle);
  padding: 40rpx;
  border-radius: 40rpx 40rpx 0 0;
  box-sizing: border-box;
  width: 100%;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.drawer-close {
  font-size: 48rpx;
  font-weight: 300;
  color: var(--ui-secondary);
  padding: 10rpx;
  margin-right: -10rpx;
}

.drawer-body {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.drawer-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-label {
  font-size: 20rpx;
  color: var(--ui-secondary);
  font-weight: 700;
  letter-spacing: 2rpx;
}

/* URL Input Styling */
.url-input-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: var(--ui-bg);
  border-radius: 20rpx;
  padding: 12rpx 12rpx 12rpx 24rpx;
  border: 2rpx solid var(--ui-border);
}

.drawer-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--ui-primary);
  height: 60rpx;
}

.input-placeholder {
  color: var(--ui-secondary);
  opacity: 0.5;
}

.btn-mini {
  background: var(--ui-border);
  color: var(--ui-secondary);
  font-size: 20rpx;
  font-weight: 800;
  padding: 16rpx 24rpx;
  line-height: 1;
  border-radius: 12rpx;
  margin: 0;
  min-height: auto;
  width: auto !important;
}

.btn-active {
  background: var(--ui-action);
  color: #000000;
}

.drawer-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 800;
  color: var(--ui-border);
  gap: 20rpx;
  padding: 10rpx 0;
}

.drawer-divider::before,
.drawer-divider::after {
  content: "";
  flex: 1;
  height: 2rpx;
  background: var(--ui-border);
}

/* PDF Box Styling */
.pdf-upload-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: var(--ui-bg);
  border: 2rpx dashed var(--ui-border);
  border-radius: 24rpx;
  padding: 32rpx;
  gap: 24rpx;
  transition: all 0.2s ease;
}

.pdf-selected {
  border-style: solid;
  border-color: var(--ui-action);
}

.pdf-icon {
  font-size: 48rpx;
}

.pdf-info {
  flex: 1;
  min-width: 0;
}

.pdf-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--ui-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pdf-hint {
  font-size: 22rpx;
  color: var(--ui-secondary);
  margin-top: 4rpx;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  margin-top: 20rpx;
}
