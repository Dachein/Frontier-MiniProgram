page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background-color: var(--ui-bg);
}

/* ========================================================================
   Header V2: 标题与切换滑块
   ======================================================================== */

.header-v2 {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
  padding: calc(180rpx + env(safe-area-inset-top)) 0 48rpx 0; /* 保持大间距，确保顶部绝对留空 */
  flex-shrink: 0;
  width: 100%;
}

.page-title {
  font-size: 72rpx; /* 标题更粗犷一点 */
  font-weight: 800;
  color: var(--ui-primary);
  letter-spacing: -2rpx;
  line-height: 1;
}

.header-right.tabs {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx; /* 稍微向上提一点，对齐大标题的视觉中心 */
}

/* Tab Pill: 灵动独立按钮 */
.tab-pill {
  height: 64rpx; /* 稍微增加高度 */
  min-width: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background: rgba(0, 0, 0, 0.05); /* 浅色模式非激活 */
  color: #8E8E93;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0;
}

@media (prefers-color-scheme: dark) {
  .tab-pill {
    background: #2C2C2E; /* 深色模式非激活 */
  }
}

/* Active State: 黑白反转逻辑 */
.tab-pill.active {
  min-width: 150rpx; /* 稍微增加宽度 */
  padding: 0 28rpx;
}

/* 浅色模式激活：黑底白字 */
@media (prefers-color-scheme: light) {
  .tab-pill.active {
    background: #000000 !important;
    color: #FFFFFF !important;
  }
}

/* 深色模式激活：白底黑字 */
@media (prefers-color-scheme: dark) {
  .tab-pill.active {
    background: #FFFFFF !important;
    color: #000000 !important;
  }
}

.tab-text {
  font-size: 24rpx; /* 增加文字字号 */
  font-weight: 700;
}

/* Swiper Content */
.home-swiper {
  flex: 1;
  width: 100%;
}

.tab-scroll {
  height: 100%;
}

.divider {
  height: 1rpx;
  background: var(--ui-border);
  opacity: 0.2;
  margin-left: 72rpx; /* 对齐 52rpx Icon + 20rpx 间距 */
}

.list-row:last-child .divider {
  display: none;
}

.loading-box, .empty-box {
  padding: 40rpx 0;
}

/* FAB */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: calc(48rpx + env(safe-area-inset-bottom));
  width: 112rpx;
  height: 112rpx;
  z-index: 999;
}

.fab-inner {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: #EA580C;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 36rpx rgba(234, 88, 12, 0.35);
}

.fab-plus {
  font-size: 56rpx;
  font-weight: 800;
  color: #000000;
  line-height: 56rpx;
  margin-top: -6rpx;
}
