<view class="container">
  <web-view src="{{url}}" bindmessage="handleMessage"></web-view>
  
  <!-- 4. Style Picker (Native Overlay) -->
  <view class="style-picker">
    <view class="styles-row">
      <view wx:for="{{styles}}" wx:key="id" 
            class="style-item {{currentStyle === item.id ? 'active' : ''}}" 
            bindtap="switchStyle" data-style="{{item.id}}"
            style="background-color: {{item.color}}">
        <text class="style-abbr">{{item.abbr}}</text>
      </view>
    </view>
    
    <view class="actions-row">
      <button class="btn-save" bindtap="handleSave" loading="{{isGenerating}}">SAVE IMAGE</button>
      <button class="btn-forward" bindtap="handleForward">FORWARD</button>
    </view>
  </view>
</view>

